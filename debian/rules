#! /usr/bin/make -f
%:
	dh $@ --parallel

export DH_VERBOSE=1

export DEB_BUILD_MAINT_OPTIONS := hardening=+all
export DEB_CFLAGS_MAINT_APPEND := -Wall

override_dh_auto_configure:
	NOCONFIGURE=1 ./autogen.sh
	dh_auto_configure -- CFLAGS="$(CPPFLAGS) $(CFLAGS)" --enable-iconv

override_dh_auto_install:
# Install universal-ctags itself
	dh_installman man/ctags.1
	# dh_install --fail-missing
	dh_install ctags /usr/bin/ctags-universal

generate-test-cases:
	git ls-files | grep 'Units\|Tmain' > misc/test-cases
