#! /usr/bin/make -f
%:
	dh $@

override_dh_autoreconf:
	dh_autoreconf ./autogen.sh

override_dh_auto_configure:
	dh_auto_configure -- --enable-iconv

override_dh_auto_install:
	dh_installman man/ctags.1
	dh_install ctags /usr/bin/ctags-universal

generate-test-cases:
	git ls-files | grep 'Units\|Tmain' > misc/test-cases
